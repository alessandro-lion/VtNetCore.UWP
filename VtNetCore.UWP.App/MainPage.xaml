                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="URL :" Margin="12,12" />
                    <TextBox x:Name="Url" Text="ssh://10.100.5.2" Margin="12,8" />
                    <TextBlock Text="Username:" Margin="12,12" />
                    <TextBox x:Name="Username" Text="admin" Margin="12,8"/>
                    <TextBlock Text="Password:" Margin="12,12" />
                    <PasswordBox x:Name="Password" Password="Minions12345" Margin="12,8" FontFamily="Segoe UI" />

                </StackPanel>
            </CommandBar.Content>
            <AppBarButton Icon="MapDrive" Label="Connect" Tapped="ConnectTapped" />
            <AppBarButton Icon="MapDrive" Label="Disconnect" Tapped="DisconnectTapped" />
        </CommandBar>
    </Page.TopAppBar>

